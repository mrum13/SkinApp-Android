<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/spls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:background="@drawable/splash" />

        <TextView
            android:id="@+id/welcome_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/spls"
            android:layout_marginTop="16dp"
            android:text="Welcome To SkinApp"
            android:textAppearance="@style/welcome_to_"
            android:fontFamily="@font/poppins_light"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/sign_in_to_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/welcome_to"
            android:layout_marginTop="8dp"
            android:text="Sign in to continue"
            android:textAppearance="@style/sign_in_to_"
            android:lineSpacingExtra="4sp"
            android:translationY="-1.8sp"
            android:gravity="center_horizontal|top" />

        <EditText
            android:id="@+id/email_form"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/sign_in_to_"
            android:layout_marginHorizontal="34dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/emailform"
            android:fontFamily="@font/poppins_light"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingLeft="45dp" />

        <EditText
            android:id="@+id/pass_form"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="34dp"
            android:layout_below="@id/email_form"
            android:layout_marginTop="8dp"
            android:background="@drawable/passform"
            android:hint="Password"
            android:fontFamily="@font/poppins_light"
            android:paddingLeft="45dp"
            android:inputType="textPassword"
            android:maxLines="1"/>

        <ImageView
            android:id="@+id/eye"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_form"
            android:layout_marginTop="22dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:src="@drawable/ic_eye_off"
            tools:ignore="ContentDescription">
        </ImageView>

        <Button
            android:id="@+id/sign_in_but"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_below="@id/pass_form"
            android:layout_marginHorizontal="34dp"
            android:layout_marginTop="16dp"
            android:background="#40BFFF"
            android:elevation="30dp"
            android:paddingBottom="10dp"
            android:text="Sign In"
            android:textColor="#FFFFFF" />

        <ProgressBar
            android:id="@+id/progress_circular"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            />

        <View
            android:id="@+id/line_37"
            android:layout_width="134dp"
            android:layout_height="1dp"
            android:layout_below="@+id/sign_in_but"
            android:layout_marginTop="31dp"
            android:layout_marginRight="28dp"
            android:layout_toLeftOf="@id/or"
            android:layout_alignStart="@id/sign_in_but"
            android:background="@drawable/line37"
            android:layout_alignLeft="@id/sign_in_but" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/sign_in_but"
            android:layout_marginTop="21dp"
            android:text="OR"
            android:textAppearance="@style/or"
            android:lineSpacingExtra="0sp"
            android:gravity="top"
            />

            <View
                android:id="@+id/line_38"
                android:layout_width="137dp"
                android:layout_height="1dp"
                android:layout_toRightOf="@id/or"
                android:layout_marginLeft="28dp"
                android:layout_below="@id/sign_in_but"
                android:layout_marginTop="31dp"
                android:background="@drawable/line38"
                android:layout_alignEnd="@id/sign_in_but"
                android:layout_alignRight="@id/sign_in_but" />

        <Button
            android:id="@+id/logingoogle"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginHorizontal="34dp"
            android:layout_below="@id/or"
            android:layout_marginTop="16dp"
            android:background="#FFFFFF"
            android:text="Login with google"
            android:drawableLeft="@drawable/ic_google"
            android:paddingLeft="16dp"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawablePadding="65dp"/>

        <Button
            android:id="@+id/loginfb"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="34dp"
            android:layout_below="@id/logingoogle"
            android:layout_marginTop="8dp"
            android:background="#FFF"
            android:text="Login with facebook"
            android:drawableLeft="@drawable/facebook"
            android:paddingLeft="16dp"
            android:textAlignment="textStart"
            android:layout_gravity="start"
            android:drawablePadding="65dp"
            />

        <TextView
            android:id="@+id/forgot_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginfb"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:text="Forgot Password"
            android:textAppearance="@style/forgot_pass"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal|top"
            />

        <TextView
            android:id="@+id/don_t_have_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/forgot_pass"
            android:layout_marginLeft="100dp"
            android:text="@string/dont_have_"
            android:textAppearance="@style/don_t_have_"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal|top"
            android:layout_marginBottom="124dp"/>

        <TextView
            android:id="@+id/dont_reg_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/forgot_pass"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/don_t_have_"
            android:text="Register"
            android:textColor="#5C61F4"
            android:textSize="12sp"
            android:lineSpacingExtra="0sp"
            android:gravity="center_horizontal|top"
            android:layout_marginBottom="124dp"/>
    </RelativeLayout>
</ScrollView>